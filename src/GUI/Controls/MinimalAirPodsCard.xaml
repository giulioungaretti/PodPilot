<?xml version="1.0" encoding="utf-8"?><UserControl x:Class="GUI.Controls.MinimalAirPodsCard" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:converters="using:GUI.Converters"><UserControl.Resources><converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/><converters:BatteryPercentageConverter x:Key="BatteryPercentageConverter"/><converters:NullableBatteryToDoubleConverter x:Key="BatteryToDoubleConverter"/><converters:ChargingIconConverter x:Key="ChargingIconConverter"/><converters:InEarIconConverter x:Key="InEarIconConverter"/><converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/></UserControl.Resources><Border CornerRadius="12" Padding="16" BorderThickness="1" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"><Grid><Grid.RowDefinitions><RowDefinition Height="Auto"/><RowDefinition Height="Auto"/></Grid.RowDefinitions><Grid Grid.Row="0" Margin="0,0,0,12"><Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="Auto"/></Grid.ColumnDefinitions><StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center"><FontIcon Glyph="&#xE7F6;" FontSize="18" FontFamily="Segoe MDL2 Assets"/><TextBlock Text="{x:Bind Device.Model, Mode=OneWay}" FontWeight="SemiBold" FontSize="14"/><Ellipse Width="6" Height="6" Fill="{ThemeResource SystemFillColorSuccessBrush}" Visibility="{x:Bind Device.IsConnected, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"/></StackPanel><Button Grid.Column="1" Command="{x:Bind Device.ToggleConnectionCommand, Mode=OneWay}" Padding="8,4"><TextBlock Text="{x:Bind Device.ConnectionButtonText, Mode=OneWay}" FontSize="12"/></Button></Grid><Grid Grid.Row="1"><Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="16"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions><Border Grid.Column="0" CornerRadius="8" Padding="12,8" Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}" Visibility="{x:Bind Device.LeftBattery, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}"><StackPanel HorizontalAlignment="Center"><StackPanel Orientation="Horizontal" Spacing="4" HorizontalAlignment="Center"><TextBlock Text="L" FontWeight="SemiBold" FontSize="12"/><FontIcon Glyph="{x:Bind Device.IsLeftInEar, Mode=OneWay, Converter={StaticResource InEarIconConverter}}" FontSize="10" FontFamily="Segoe MDL2 Assets"/><FontIcon Glyph="{x:Bind Device.IsLeftCharging, Mode=OneWay, Converter={StaticResource ChargingIconConverter}}" FontSize="10" FontFamily="Segoe MDL2 Assets"/></StackPanel><TextBlock Text="{x:Bind Device.LeftBattery, Mode=OneWay, Converter={StaticResource BatteryPercentageConverter}}" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center"/></StackPanel></Border><Border Grid.Column="2" CornerRadius="8" Padding="12,8" Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}" Visibility="{x:Bind Device.RightBattery, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}"><StackPanel HorizontalAlignment="Center"><StackPanel Orientation="Horizontal" Spacing="4" HorizontalAlignment="Center"><TextBlock Text="R" FontWeight="SemiBold" FontSize="12"/><FontIcon Glyph="{x:Bind Device.IsRightInEar, Mode=OneWay, Converter={StaticResource InEarIconConverter}}" FontSize="10" FontFamily="Segoe MDL2 Assets"/><FontIcon Glyph="{x:Bind Device.IsRightCharging, Mode=OneWay, Converter={StaticResource ChargingIconConverter}}" FontSize="10" FontFamily="Segoe MDL2 Assets"/></StackPanel><TextBlock Text="{x:Bind Device.RightBattery, Mode=OneWay, Converter={StaticResource BatteryPercentageConverter}}" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center"/></StackPanel></Border></Grid></Grid></Border></UserControl>

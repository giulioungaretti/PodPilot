<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="GUI.Controls.AirPodsCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="using:GUI.Converters"
    mc:Ignorable="d">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
        <converters:TimeAgoConverter x:Key="TimeAgoConverter"/>
        <converters:BatteryPercentageConverter x:Key="BatteryPercentageConverter"/>
        <converters:SignalStrengthConverter x:Key="SignalStrengthConverter"/>
        <converters:NullableBatteryToDoubleConverter x:Key="BatteryToDoubleConverter"/>
        <converters:ChargingIconConverter x:Key="ChargingIconConverter"/>
        <converters:InEarIconConverter x:Key="InEarIconConverter"/>
        <converters:LidStatusConverter x:Key="LidStatusConverter"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <converters:BoolToOpacityConverter x:Key="BoolToOpacityConverter"/>
    </UserControl.Resources>

    <Border CornerRadius="12" 
            Padding="24" 
            BorderThickness="1"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            Opacity="{x:Bind Device.IsActive, Mode=OneWay, Converter={StaticResource BoolToOpacityConverter}}">
        
        <StackPanel Spacing="20">
            
            <!-- Header -->
            <Grid>
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <TextBlock Text="ðŸŽ§" FontSize="28" VerticalAlignment="Center" FontFamily="Segoe UI Emoji"/>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="{x:Bind Device.Model, Mode=OneWay}" 
                                   FontWeight="SemiBold" 
                                   FontSize="20"/>
                        <TextBlock Text="{x:Bind Device.DeviceName, Mode=OneWay}" 
                                   FontSize="13"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>
                </StackPanel>
                
                <!-- Connect/Disconnect Button and Status -->
                <Grid HorizontalAlignment="Right" VerticalAlignment="Center">
                    <!-- Use a Grid with overlapping content and transitions for smooth state changes -->
                    
                    <!-- Connection Status Badge (Connected) -->
                    <Border Background="{ThemeResource AccentFillColorDefaultBrush}"
                            CornerRadius="12"
                            Padding="8,4"
                            Visibility="{x:Bind Device.IsConnected, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Border.Transitions>
                            <TransitionCollection>
                                <EntranceThemeTransition FromHorizontalOffset="20"/>
                            </TransitionCollection>
                        </Border.Transitions>
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <TextBlock Text="âœ“" 
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="White"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="Connected" 
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="White"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Connecting Indicator (Subtle) -->
                    <Border Background="{ThemeResource LayerFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource AccentFillColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="12"
                            Padding="10,6"
                            Visibility="{x:Bind Device.IsConnecting, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Border.Transitions>
                            <TransitionCollection>
                                <EntranceThemeTransition FromHorizontalOffset="20"/>
                            </TransitionCollection>
                        </Border.Transitions>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <ProgressRing Width="14" 
                                          Height="14" 
                                          IsActive="True"
                                          Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                                          VerticalAlignment="Center"/>
                            <TextBlock Text="Connecting" 
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Pair Device Button (Needs Pairing) -->
                    <Button Command="{x:Bind Device.OpenBluetoothSettingsCommand, Mode=OneWay}"
                            Visibility="{x:Bind Device.ShowPairMessage, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                            ToolTipService.ToolTip="Open Windows Bluetooth settings to pair your device">
                        <Button.Transitions>
                            <TransitionCollection>
                                <EntranceThemeTransition FromHorizontalOffset="20"/>
                            </TransitionCollection>
                        </Button.Transitions>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="âš " 
                                       FontSize="14"
                                       FontFamily="Segoe UI Emoji"
                                       Foreground="{ThemeResource SystemFillColorCautionBrush}"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="Pair Device" 
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <!-- Connect Button (Default State) -->
                    <Button Command="{x:Bind Device.ConnectCommand, Mode=OneWay}"
                            Visibility="{x:Bind Device.ShowConnectButton, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                            Style="{StaticResource AccentButtonStyle}">
                        <Button.Transitions>
                            <TransitionCollection>
                                <EntranceThemeTransition FromHorizontalOffset="20"/>
                            </TransitionCollection>
                        </Button.Transitions>
                        <TextBlock Text="Connect"/>
                    </Button>
                    
                    <!-- Disconnect Button -->
                    <Button Command="{x:Bind Device.DisconnectCommand, Mode=OneWay}"
                            Visibility="{x:Bind Device.IsConnected, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Button.Transitions>
                            <TransitionCollection>
                                <EntranceThemeTransition FromHorizontalOffset="20"/>
                            </TransitionCollection>
                        </Button.Transitions>
                        <TextBlock Text="Disconnect"/>
                    </Button>
                </Grid>
            </Grid>

            <!-- Battery Section -->
            <StackPanel Spacing="16">
                <TextBlock Text="ðŸ”‹ Battery" 
                           FontWeight="SemiBold" 
                           FontSize="16"
                           FontFamily="Segoe UI Emoji"/>
                
                <!-- Left Battery -->
                <Grid Visibility="{x:Bind Device.LeftBattery, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Left" 
                               VerticalAlignment="Center"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    
                    <ProgressBar Grid.Column="1" 
                                 Value="{x:Bind Device.LeftBattery, Mode=OneWay, Converter={StaticResource BatteryToDoubleConverter}}"
                                 Maximum="100"
                                 VerticalAlignment="Center"
                                 Margin="8,0"/>
                    
                    <StackPanel Grid.Column="2" 
                                Orientation="Horizontal" 
                                Spacing="6">
                        <TextBlock Text="{x:Bind Device.LeftBattery, Mode=OneWay, Converter={StaticResource BatteryPercentageConverter}}" 
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="{x:Bind Device.IsLeftCharging, Mode=OneWay, Converter={StaticResource ChargingIconConverter}}" 
                                   FontSize="14"
                                   VerticalAlignment="Center"
                                   FontFamily="Segoe UI Emoji"/>
                        <TextBlock Text="{x:Bind Device.IsLeftInEar, Mode=OneWay, Converter={StaticResource InEarIconConverter}}" 
                                   FontSize="14"
                                   VerticalAlignment="Center"
                                   FontFamily="Segoe UI Emoji"/>
                    </StackPanel>
                </Grid>

                <!-- Right Battery -->
                <Grid Visibility="{x:Bind Device.RightBattery, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Right" 
                               VerticalAlignment="Center"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    
                    <ProgressBar Grid.Column="1" 
                                 Value="{x:Bind Device.RightBattery, Mode=OneWay, Converter={StaticResource BatteryToDoubleConverter}}"
                                 Maximum="100"
                                 VerticalAlignment="Center"
                                 Margin="8,0"/>
                    
                    <StackPanel Grid.Column="2" 
                                Orientation="Horizontal" 
                                Spacing="6">
                        <TextBlock Text="{x:Bind Device.RightBattery, Mode=OneWay, Converter={StaticResource BatteryPercentageConverter}}" 
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="{x:Bind Device.IsRightCharging, Mode=OneWay, Converter={StaticResource ChargingIconConverter}}" 
                                   FontSize="14"
                                   VerticalAlignment="Center"
                                   FontFamily="Segoe UI Emoji"/>
                        <TextBlock Text="{x:Bind Device.IsRightInEar, Mode=OneWay, Converter={StaticResource InEarIconConverter}}" 
                                   FontSize="14"
                                   VerticalAlignment="Center"
                                   FontFamily="Segoe UI Emoji"/>
                    </StackPanel>
                </Grid>

                <!-- Case Battery -->
                <Grid Visibility="{x:Bind Device.CaseBattery, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Case" 
                               VerticalAlignment="Center"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    
                    <ProgressBar Grid.Column="1" 
                                 Value="{x:Bind Device.CaseBattery, Mode=OneWay, Converter={StaticResource BatteryToDoubleConverter}}"
                                 Maximum="100"
                                 VerticalAlignment="Center"
                                 Margin="8,0"/>
                    
                    <StackPanel Grid.Column="2" 
                                Orientation="Horizontal" 
                                Spacing="6">
                        <TextBlock Text="{x:Bind Device.CaseBattery, Mode=OneWay, Converter={StaticResource BatteryPercentageConverter}}" 
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="{x:Bind Device.IsCaseCharging, Mode=OneWay, Converter={StaticResource ChargingIconConverter}}" 
                                   FontSize="14"
                                   VerticalAlignment="Center"
                                   FontFamily="Segoe UI Emoji"/>
                        <TextBlock Text="{x:Bind Device.IsLidOpen, Mode=OneWay, Converter={StaticResource LidStatusConverter}}" 
                                   FontSize="14"
                                   VerticalAlignment="Center"
                                   FontFamily="Segoe UI Emoji"/>
                    </StackPanel>
                </Grid>
            </StackPanel>

        </StackPanel>
    </Border>
</UserControl>

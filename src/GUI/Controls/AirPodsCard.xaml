<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="GUI.Controls.AirPodsCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="using:GUI.Converters"
    mc:Ignorable="d">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
        <converters:TimeAgoConverter x:Key="TimeAgoConverter"/>
        <converters:BatteryPercentageConverter x:Key="BatteryPercentageConverter"/>
        <converters:SignalStrengthConverter x:Key="SignalStrengthConverter"/>
        <converters:NullableBatteryToDoubleConverter x:Key="BatteryToDoubleConverter"/>
        <converters:ChargingIconConverter x:Key="ChargingIconConverter"/>
        <converters:InEarIconConverter x:Key="InEarIconConverter"/>
        <converters:LidStatusConverter x:Key="LidStatusConverter"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <converters:BoolToOpacityConverter x:Key="BoolToOpacityConverter"/>
        <converters:PairingTooltipConverter x:Key="PairingTooltipConverter"/>
    </UserControl.Resources>

    <Border CornerRadius="12" 
            Padding="24" 
            BorderThickness="1"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            Opacity="{x:Bind Device.IsActive, Mode=OneWay, Converter={StaticResource BoolToOpacityConverter}}">
        
        <StackPanel Spacing="20">
            
            <!-- Header -->
            <Grid>
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <!-- Device Icon - Clickable when needs pairing -->
                    <Grid>
                        <!-- Normal icon (not needing pairing) -->
                        <TextBlock Text="ðŸŽ§" 
                                   FontSize="28" 
                                   VerticalAlignment="Center" 
                                   FontFamily="Segoe UI Emoji"
                                   Visibility="{x:Bind Device.ShowPairingWarning, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                        
                        <!-- Warning icon with link (needs pairing) -->
                        <HyperlinkButton Command="{x:Bind Device.OpenBluetoothSettingsCommand, Mode=OneWay}"
                                         Padding="0"
                                         VerticalAlignment="Center"
                                         ToolTipService.ToolTip="Device not paired. Click to open Bluetooth settings."
                                         Visibility="{x:Bind Device.ShowPairingWarning, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸŽ§" FontSize="28" FontFamily="Segoe UI Emoji"/>
                                <TextBlock Text="âš " 
                                           FontSize="14" 
                                           FontFamily="Segoe UI Emoji"
                                           Foreground="{ThemeResource SystemFillColorCautionBrush}"
                                           VerticalAlignment="Top"
                                           Margin="-8,0,0,0"/>
                            </StackPanel>
                        </HyperlinkButton>
                    </Grid>
                    
                    <StackPanel VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="{x:Bind Device.Model, Mode=OneWay}" 
                                       FontWeight="SemiBold" 
                                       FontSize="20"
                                       VerticalAlignment="Center"/>
                            <!-- Connected Status Dot -->
                            <Ellipse Width="8" 
                                     Height="8" 
                                     Fill="{ThemeResource SystemFillColorSuccessBrush}"
                                     VerticalAlignment="Center"
                                     Visibility="{x:Bind Device.IsConnected, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                                     ToolTipService.ToolTip="Connected"/>
                        </StackPanel>
                        <TextBlock Text="{x:Bind Device.DeviceName, Mode=OneWay}" 
                                   FontSize="13"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>
                </StackPanel>
                
                <!-- Connect/Disconnect Toggle Button -->
                <StackPanel HorizontalAlignment="Right" 
                            VerticalAlignment="Center"
                            Orientation="Horizontal"
                            Spacing="8">
                    
                    <!-- Toggle Button: Connect when disconnected, Disconnect when connected -->
                    <Button Command="{x:Bind Device.ToggleConnectionCommand, Mode=OneWay}"
                            IsEnabled="{x:Bind Device.CanToggleConnection, Mode=OneWay}"
                            ToolTipService.ToolTip="{x:Bind Device.ConnectionButtonTooltip, Mode=OneWay}">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
                                <Setter Property="Background" Value="{ThemeResource AccentFillColorDefaultBrush}"/>
                                <Setter Property="Foreground" Value="{ThemeResource TextOnAccentFillColorPrimaryBrush}"/>
                            </Style>
                        </Button.Style>
                        <Button.Transitions>
                            <TransitionCollection>
                                <EntranceThemeTransition FromHorizontalOffset="-20"/>
                            </TransitionCollection>
                        </Button.Transitions>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <!-- Show spinner when connecting -->
                            <ProgressRing Width="14" 
                                          Height="14" 
                                          IsActive="True"
                                          Visibility="{x:Bind Device.IsConnecting, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                                          VerticalAlignment="Center"/>
                            <!-- Button text changes based on connection state -->
                            <TextBlock Text="{x:Bind Device.ConnectionButtonText, Mode=OneWay}" 
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Battery Section -->
            <StackPanel Spacing="16">
                <TextBlock Text="ðŸ”‹ Battery" 
                           FontWeight="SemiBold" 
                           FontSize="16"
                           FontFamily="Segoe UI Emoji"/>
                
                <!-- Left Battery -->
                <Grid Visibility="{x:Bind Device.LeftBattery, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Left" 
                               VerticalAlignment="Center"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    
                    <ProgressBar Grid.Column="1" 
                                 Value="{x:Bind Device.LeftBattery, Mode=OneWay, Converter={StaticResource BatteryToDoubleConverter}}"
                                 Maximum="100"
                                 VerticalAlignment="Center"
                                 Margin="8,0"/>
                    
                    <StackPanel Grid.Column="2" 
                                Orientation="Horizontal" 
                                Spacing="6">
                        <TextBlock Text="{x:Bind Device.LeftBattery, Mode=OneWay, Converter={StaticResource BatteryPercentageConverter}}" 
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="{x:Bind Device.IsLeftCharging, Mode=OneWay, Converter={StaticResource ChargingIconConverter}}" 
                                   FontSize="14"
                                   VerticalAlignment="Center"
                                   FontFamily="Segoe MDL2 Assets"/>
                        <TextBlock Text="{x:Bind Device.IsLeftInEar, Mode=OneWay, Converter={StaticResource InEarIconConverter}}" 
                                   FontSize="14"
                                   VerticalAlignment="Center"
                                   FontFamily="Segoe MDL2 Assets"/>
                    </StackPanel>
                </Grid>

                <!-- Right Battery -->
                <Grid Visibility="{x:Bind Device.RightBattery, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Right" 
                               VerticalAlignment="Center"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    
                    <ProgressBar Grid.Column="1" 
                                 Value="{x:Bind Device.RightBattery, Mode=OneWay, Converter={StaticResource BatteryToDoubleConverter}}"
                                 Maximum="100"
                                 VerticalAlignment="Center"
                                 Margin="8,0"/>
                    
                    <StackPanel Grid.Column="2" 
                                Orientation="Horizontal" 
                                Spacing="6">
                        <TextBlock Text="{x:Bind Device.RightBattery, Mode=OneWay, Converter={StaticResource BatteryPercentageConverter}}" 
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="{x:Bind Device.IsRightCharging, Mode=OneWay, Converter={StaticResource ChargingIconConverter}}" 
                                   FontSize="14"
                                   VerticalAlignment="Center"
                                   FontFamily="Segoe MDL2 Assets"/>
                        <TextBlock Text="{x:Bind Device.IsRightInEar, Mode=OneWay, Converter={StaticResource InEarIconConverter}}" 
                                   FontSize="14"
                                   VerticalAlignment="Center"
                                   FontFamily="Segoe MDL2 Assets"/>
                    </StackPanel>
                </Grid>

                <!-- Case Battery -->
                <Grid Visibility="{x:Bind Device.CaseBattery, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Case" 
                               VerticalAlignment="Center"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    
                    <ProgressBar Grid.Column="1" 
                                 Value="{x:Bind Device.CaseBattery, Mode=OneWay, Converter={StaticResource BatteryToDoubleConverter}}"
                                 Maximum="100"
                                 VerticalAlignment="Center"
                                 Margin="8,0"/>
                    
                    <StackPanel Grid.Column="2" 
                                Orientation="Horizontal" 
                                Spacing="6">
                        <TextBlock Text="{x:Bind Device.CaseBattery, Mode=OneWay, Converter={StaticResource BatteryPercentageConverter}}" 
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="{x:Bind Device.IsCaseCharging, Mode=OneWay, Converter={StaticResource ChargingIconConverter}}" 
                                   FontSize="14"
                                   VerticalAlignment="Center"
                                   FontFamily="Segoe MDL2 Assets"/>
                        <TextBlock Text="{x:Bind Device.IsLidOpen, Mode=OneWay, Converter={StaticResource LidStatusConverter}}" 
                                   FontSize="14"
                                   VerticalAlignment="Center"
                                   FontFamily="Segoe MDL2 Assets"/>
                    </StackPanel>
                </Grid>
            </StackPanel>

        </StackPanel>
    </Border>
</UserControl>

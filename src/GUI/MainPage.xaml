<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="GUI.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GUI"
    xmlns:controls="using:GUI.Controls"
    xmlns:models="using:DeviceCommunication.Models"
    xmlns:converters="using:GUI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
    </Page.Resources>

    <Grid x:Name="PageRoot">
        <Grid.Background>
            <AcrylicBrush TintColor="{ThemeResource SolidBackgroundFillColorBase}"
                          TintOpacity="0.5"
                          FallbackColor="{ThemeResource SolidBackgroundFillColorBase}" />
        </Grid.Background>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Padding="40,20,40,40" Spacing="32" MaxWidth="1200">
                
                <!-- Header -->
                <StackPanel Spacing="8">
                    <TextBlock Text="PodPilot" 
                               FontSize="32" 
                               FontWeight="Bold" />
                    <TextBlock Text="Monitor your AirPods battery and status" 
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               FontSize="14" />
                </StackPanel>

                <!-- Saved Device Section -->
                <StackPanel Spacing="16">
                    <TextBlock Text="ðŸ’¾ Saved Device" 
                               FontSize="20" 
                               FontWeight="SemiBold" />
                    
                    <!-- Saved Device Card -->
                    <controls:AirPodsCard Device="{x:Bind ViewModel.SavedDevice, Mode=OneWay}" 
                                          ShowActions="True"
                                          ForgetCommand="{x:Bind ViewModel.ForgetDeviceCommand, Mode=OneWay}"
                                          Visibility="{x:Bind ViewModel.HasSavedDevice, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    
                    <!-- Empty State -->
                    <Border CornerRadius="12"
                            Padding="40,32"
                            BorderThickness="1"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            Visibility="{x:Bind ViewModel.HasSavedDevice, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                        <StackPanel Spacing="12" HorizontalAlignment="Center">
                            <TextBlock Text="ðŸ“±"
                                       FontSize="48"
                                       HorizontalAlignment="Center"
                                       Opacity="0.5"/>
                            <TextBlock Text="No saved device"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Save a device from the discovered list below"
                                       FontSize="13"
                                       HorizontalAlignment="Center"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Discovered Devices Section -->
                <StackPanel Spacing="16">
                    <Grid>
                        <TextBlock Text="ðŸ“¡ Discovered Devices" 
                                   FontSize="20" 
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center" />
                        
                        <StackPanel Orientation="Horizontal" 
                                    Spacing="12" 
                                    HorizontalAlignment="Right"
                                    Visibility="{x:Bind ViewModel.IsScanning, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                            <ProgressRing IsActive="True" Width="20" Height="20" />
                            <TextBlock Text="Scanning..." 
                                       VerticalAlignment="Center"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       FontSize="13" />
                        </StackPanel>
                    </Grid>

                    <!-- Discovered Devices List -->
                    <ItemsControl ItemsSource="{x:Bind ViewModel.DiscoveredDevices, Mode=OneWay}"
                                  Visibility="{x:Bind ViewModel.HasDiscoveredDevices, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="models:AirPodsDeviceInfo">
                                <controls:AirPodsCard Device="{x:Bind Mode=OneWay}" 
                                                      ShowActions="True"
                                                      SaveCommand="{Binding ElementName=PageRoot, Path=ViewModel.SaveDeviceCommand}"
                                                      Margin="0,0,0,16"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                    
                    <!-- Empty State -->
                    <controls:EmptyState Icon="ðŸ“±" 
                                         Title="No devices found"
                                         Message="Open your AirPods case to discover devices nearby"
                                         Visibility="{x:Bind ViewModel.HasDiscoveredDevices, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                </StackPanel>

                <!-- Info Footer -->
                <Border Background="{ThemeResource LayerFillColorDefaultBrush}"
                        CornerRadius="8"
                        Padding="16"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1">
                    <StackPanel Spacing="8">
                        <TextBlock FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                            <Run Text="ðŸ’¡" />
                            <Run Text="Tip: Your AirPods don't need to be paired to view their status." />
                        </TextBlock>
                        <TextBlock FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                            <Run Text="They just need to be in range and broadcasting." />
                        </TextBlock>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
